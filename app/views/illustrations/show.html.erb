<div class="container pt-3">
  <div class="col-lg-8 offset-lg-2">
    <div class="card mb-3">
      <div class="row no-gutters">
        <div class="col-lg-4 text-center">
          <h3><%= t('.illustration') %></h3>
          <%= image_tag @illustration.content, class: 'img-fluid', size: '200x200' %>
        </div>
        <div class="col-lg-8">
          <div class="card-body">
            <!-- 投稿フォーム -->
            <%= render 'titles/form', { illustration: @illustration, title: @title } %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- 投稿一覧 -->
  <div class="row mb-3">
    <div class="col-lg-8 offset-lg-2 text-center">
      <%= link_to t('.order_new'),
                  illustration_path,
                  class: 'btn btn-outline-dark btn-sm',
                  remote: true %>
      <%= link_to t('.order_popular'),
                  illustration_path(type: 'order_popular'),
                  class: 'btn btn-outline-dark btn-sm',
                  remote: true %>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-8 offset-lg-2">
      <table class="table table-hover">
        <thead>
          <tr class="table-secondary">
            <th class="col-5"><%= t('illustrations.show.posted_title') %></th>
            <th class="col-3"><%= t('illustrations.show.posted_user') %></th>
            <th class="col-2"><%= t('illustrations.show.vote_quantity') %></th>
            <th class="col-2"><%= t('illustrations.show.vote') %></th>
          </tr>
        </thead>
        <%= render 'titles/titles', { titles: @titles } %>
      </table>
    </div>
  </div>
</div>
