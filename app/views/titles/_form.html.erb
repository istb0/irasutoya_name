<div class="row mb-3">
  <div class="col-lg-12">
    <%= form_with model: [illustration, title], local: false, id: 'new_title' do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <div class="form-group">
        <%= f.label :content %>
        <%= f.text_field :content, class: 'form-control mb-3', id: 'js-new-title-content', row: 4, placeholder: 'タイトルを入力' %>
      </div>
      <div class="form-group">
        <%= f.label :user_name %>
        <%= f.text_field :user_name, class: 'form-control mb-3', id: 'js-new-title-user_name', row: 4, placeholder: 'ニックネームを入力' %>
      </div>
      <div class="form-group">
        <%= f.hidden_field :vote_quantity, value: 0 %>
      </div>
      <%= f.submit t('defaults.post'), class: 'btn btn-secondary' %>
    <% end %>
  </div>
</div>